<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SplitIt.AddPersonPage">
    <StackLayout>

        <Label Margin="40" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large">Add Item</Label>
        <Frame Margin="10" Padding="10" CornerRadius="10">
            <StackLayout Padding="5" Margin="5" Spacing="20">
               <Entry x:Name="inputname" Placeholder="Enter Name"  FontSize="16" />
                <Button x:Name="savepersonbutton" HorizontalOptions="Center" WidthRequest="100" BackgroundColor="#2F80ED" Text="Add" TextColor="White" TranslationX="80" Clicked="PersonOnSave"/>
               
            </StackLayout>
        </Frame>
        
    </StackLayout>
</ContentPage>

